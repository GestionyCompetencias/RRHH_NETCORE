<div id="modal_Cargos" class="modal fade" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header bg-dark pb-0">
                <h2><label id="txt_Cabecera" class="text-light">Cargos</label></h2><label id="txt_id" class="cls_t text-indigo"></label>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">

                <div class="row">
                    <div class="form-group form-group-float col-md-2">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Codigo</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_codigo" class="form-control cls_t obl_t" placeholder="Codigo*" name="Codigo" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-baby"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-float col-md-8">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Descripción</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_descripcion" class="form-control cls_t obl_t" name="Descripcion" placeholder="Descripcion*" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-dots-nine"></i>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="form-group form-group-float col-md-4">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Fecha inicio</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="date" id="txt_fecini" class="form-control cls_t obl_t" placeholder="Fecha inicio*" name="Fechainicio" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-calendar"></i>
                            </div>
                        </div>
                    </div>
                        <div class="form-group form-group-float col-md-4">
                            <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Fecha termino</label>
                            <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="date" id="txt_fecter" class="form-control cls_t obl_t" placeholder="Fecha termino*" name="Fecha termino" required>
                                <div class="form-control-feedback-icon">
                                    <i class="ph-calendar"></i>
                                </div>
                            </div>
                        </div>

                </div>
                <div class="row">
                     <div class="form-group form-group-float col-md-12">
                         <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Requisitos</label>
                            <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_requisitos" class="form-control cls_t" name="Requisitos" placeholder="Requisitos" required>
                                <div class="form-control-feedback-icon">
                                    <i class="ph-house-line"></i>
                             </div>
                     </div>
                        </div>
                </div>
                <div class="row">
                    <div class="form-group form-group-float col-md-12">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Funciones</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_funciones" class="form-control cls_t" name="Funciones" placeholder="Funciones" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-house-line"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group form-group-float col-md-3">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Sueldo mínimo</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_sueldominimo" class="form-control cls_t" name="Sueldo minimo" placeholder="Sueldo mínimo" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-money"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-float col-md-3">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Sueldo máximo</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_sueldomaximo" class="form-control cls_t" name="Sueldo maximo" placeholder="Sueldo máximo" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-money"></i>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div id="divErrores" style="font-weight:bold;color:red" class="form-control cls_t"></div>
                </div>

            </div>

            <div class="modal-footer" style="text-align:right">
                <button type="button" id="btnCerrar" class="btn btn-light legitRipple float-end" data-bs-dismiss="modal">Cerrar</button>
                <input type="button" value="Guardar" class="btn btn-primary float-end" onclick="Guarda()" />
            </div>

        </div>
    </div>
</div>




@section Scripts{
    <script src="~/scripts/formatorut.js"></script>
    <script src="~/scripts/Cargos.js"></script>
