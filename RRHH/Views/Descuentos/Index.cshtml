<div id="modal_Descuentos" class="modal fade" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header bg-dark pb-0" >
                <h2><label id="txt_Cabecera" class="text-light">Descuentos</label></h2><label id="txt_id" class="text-indigo cls_t"></label>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">

                <div class="row">
                    <div class="form-group form-group-float col-md-2">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Codigo descuento</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_descuento" class="form-control cls_t Obl_t" placeholder="Codigo descuento*" name="Descuento" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-baby"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-float col-md-8">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Descripción</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_descripcion" class="form-control cls_t Obl_t" name="Descripcion" placeholder="Descripcion*" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-dots-nine"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4">
                        <span>Prioridad</span>
                        <div class="input-group">
                            <select class="form-control input-borde cls_t Obl_t" name="Prioridad" id="txt_prioridad" required>
                                <option value=''>-- Seleccione --</option>
                                <option value='1'>OBLIGATORIO</option>
                                <option value='2'>ALTA</option>
                                <option value='3'>MEDIA</option>
                                <option value='4'>BAJA</option>
                                <option value='5'>Muy BAJA</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group form-group-float col-md-4">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Mínimo</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_minimo" class="form-control cls_t" name="Minimo" placeholder="Minimo" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-dots-nine"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-float col-md-4">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Máximo</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_maximo" class="form-control cls_t" name="Maximo" placeholder="Maximo" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-dots-nine"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group form-group-float col-md-12">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Código dirección del trabajo</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <select id="cbo_DT" name="DT" class="form-control m-0 p-0 cls_t Obl_t"></select>
                        </div>
                    </div>
