
@{
    Layout = null;
}

<!DOCTYPE html>

@if (ViewBag.Inicio == true)
{
    <script type="text/javascript">
        alert("Se ha enviado un codigo de verificacion al correo predefinido.");
    </script>
}


@if (ViewBag.Exito == true)
{
    <script type="text/javascript">
        alert("Su nueva contraseña fue cambiada exitosamente.");
        Redirect("~/Login");
    </script>
}

@if (ViewBag.ErrorCodigo == true)
{
    <script type="text/javascript">
        alert("Error en codigo de verificación o clave.");
    </script>
}
@if (ViewBag.ErrorIgual == true)
{
    <script type="text/javascript">
        alert("Error claves diferentes.");
    </script>
}
@if (ViewBag.ErrorClave == true)
{
    <script type="text/javascript">
        alert("Error en clave.");
    </script>
}

<html>

<head>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>GYC Recursos Humanos</title>
    <!--Global stylesheets -->

    <link rel="stylesheet" type="text/css" href="/Content/css/icons/icomoon/styles.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/icons/fontawesome/styles.min.css" />
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap_limitless.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/layout.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/components.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/colors.min.css">
    <link href="~/assets/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

</head>

<body>
    <div class="page-content login-cover">
        <div class="content-wrapper">
            <div class="content d-flex justify-content-center align-items-center">
                <form class="login-form wmin-sm-400" method="POST">
                    <div class="card mb-0">



                        <div class="tab-content card-body">
                            <div class="tab-pane fade show active" id="login-tab1">
                                <div class="text-center mb-3">
                                    <h5 class="mb-0">Ingreso</h5>
                                    <span class="d-block text-muted">Contraseña</span>
                                </div>

                                <div class="form-group form-group-feedback form-group-feedback-left">
                                    <input type="text" class="form-control" placeholder="Codigo" name="codigo" id="codigo" >
                                    <label class="d-block text-muted">Codigo de verificación</label>
                                    <div class="form-control-feedback">
                                        <i class="icon-user text-muted"></i>
                                    </div>
                                </div>
                                <div class="form-group form-group-feedback form-group-feedback-left">
                                     <input type="password" class="form-control" placeholder="Clave" name="clave" id="clave" >
                                    <label class="d-block text-muted">Nueva clave (min 6 caracteres)</label>
                                    <div class="form-control-feedback">
                                        <i class="icon-user text-muted"></i>
                                    </div>
                                </div>
                               
                                <div class="form-group form-group-feedback form-group-feedback-left">
                                    <input type="password" class="form-control" placeholder="Replica" name="replica" id="replica">
                                    <label class="d-block text-muted">
                                        <label class="d-block text-muted">Reingrese clave</label>
                                    </label>
                                    <div class="form-control-feedback">
                                        <i class="icon-user text-muted"></i>
                                    </div>
                                </div>

                                 <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>




    @* Aca se deben colocar los JS *@
    <script src="/Content/js/main/jquery.min.js"></script>
    <script src="/Content/js/main/bootstrap.bundle.min.js"></script>
    <script src="/Content/js/plugins/loaders/blockui.min.js"></script>
    <script src="/Content/js/plugins/tables/datatables/datatables.min.js"></script>
    <script src="/Content/js/plugins/forms/styling/switchery.min.js"></script>
    <script src="/Content/js/plugins/forms/selects/select2.min.js"></script>
    <script src="/Content/js/plugins/forms/styling/uniform.min.js"></script>
    <script src="/Content/js/app.js"></script>
    @*// Mascara para el RUT*@
    <script>

        function mascaras(TxtMascara) {

            var input = document.getElementById(TxtMascara).value;
            input = input.replace("-", "");

            if (input.length > 2) {
                document.getElementById(TxtMascara).value = input.substring(-1, input.length - 1) + "-" + input.substring(input.length - 1)
            }
        }

    </script>



</body>
</html>

