<div class="dataTables_wrapper no-footer">
    <div class="card datatable-scroll-wrap">

        <div class="card-header pb-0 d-flex justify-content-between">
            <h2><i class="counter-icon"></i>Reajuste de sueldos</h2>
        </div>

        <div class="card-body">
         <form id="form-filter">
           <div class="row form-group-float col-md-4">
                <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Reajuste</label>
                <div class="form-control-feedback form-control-feedback-start mb-3">
                    <input type="text" id="txt_reajuste" class="form-control cls_t Obl_t" name="reajuste" placeholder="% de reajuste" required>
                    <div class="form-control-feedback-icon">
                        <i class="ph-percent"></i>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3" style="text-align:left">
                        <input id="busca" type="button" value="Procesar" class="btn btn-primary bg-indigo-800 rounded-round btn-sm m-2" onclick="obtenerDatosValidos()" />
                </div>
                <div class="col-md-3" style="text-align:right">
                    <button id="Grabar" style="display: none;" type="button" class="btn btn-primary bg-indigo-800 rounded-round btn-sm m-2" onclick="Grabar()">Nuevo registro</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" align="center">
                    <img id="esperar" src="global_assets/images/loading-gif.gif" style="height:30px;width:30px;" />
                </div>

            </div>

            <div id="list_reajuste"></div>
          </form>

        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/ReajusteSueldos.js"></script>
