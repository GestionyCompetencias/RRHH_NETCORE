@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="global_assets/css/icons/fontawesome/styles.min.css" rel="stylesheet" type="text/css">
<script src="global_assets/js/demo_pages/form_floating_labels.js"></script>

<div class="dataTables_wrapper no-footer">
    <div class="card datatable-scroll-wrap">

        <div class="card-header pb-0 d-flex justify-content-between">
            <h2>Asistencias</h2>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="form-group form-group-float col-md-4">
                    <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Trabajador*</label>
                    <div class="form-control-feedback form-control-feedback-start mb-3">
                        <select id="cbo_persona" class="custom-select form-control input-borde"></select>
                        <div class="form-control-feedback-icon">
                            <i class="ph-dots-nine"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-float col-md-4">
                    <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Fecha desde</label>
                    <div class="form-control-feedback form-control-feedback-start mb-3">
                        <input type="date" id="txt_des" class="form-control cls_t"  name="desde" required>
                        <div class="form-control-feedback-icon">
                            <i class="ph-calendar"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-float col-md-4">
                    <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Fecha hasta</label>
                    <div class="form-control-feedback form-control-feedback-start mb-3">
                        <input type="date" id="txt_has" class="form-control cls_t"  name="hasta" required>
                        <div class="form-control-feedback-icon">
                            <i class="ph-calendar"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3" style="text-align:left">
                    <input id="busca" type="button" value="Buscar" class="btn btn-primary bg-indigo-800 rounded-round btn-sm m-2" onclick="ObtenerDatos()" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" align="center">
                    <img id="esperar" src="global_assets/images/loading-gif.gif" style="height:30px;width:30px;" />
                </div>

            </div>

            <div id="list_marcas"></div>

        </div>

    </div>
</div>


@****@

<div id="modal_Marcas" class="modal fade" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h2><label id="txt_Cabecera">Marcas</label></h2><label id="txt_checktime" class="text-white"></label>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="form-group form-group-float col-md-4">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Fecha</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="date" id="txt_fecha" class="form-control cls_t Obl_t" placeholder="Fecha*" name="fecha" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-calendar"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-float col-md-4">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Entrada</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="time" id="txt_entrada" class="form-control cls_t Obl_t" name="entrada" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-ny-times-logo"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-float col-md-4">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Salida</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="time" id="txt_salida" class="form-control cls_t Obl_t"  name="salida" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-ny-times-logo"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                        <input type="hidden" name="txt_rut" id="txt_rut">
                        <input type="hidden" name="txt_checkent" id="txt_checkent">
                        <input type="hidden" name="txt_checksal" id="txt_checksal">
                        <input type="hidden" name="txt_diasem" id="txt_diasem">
                </div>
                    <div class="row">
                        <div id="divErrores" style="font-weight:bold;color:red"></div>
                    </div>

            </div>
            <div class="modal-footer" style="text-align:right">
                <button type="button" id="btnCerrar" class="btn btn-link legitRipple" data-dismiss="modal">Cerrar</button>
                <input type="button" value="Guardar" class="btn btn-primary" onclick="Guarda()" />
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <!-- Theme JS files -->
    <script src="~/Scripts/ModificaMarcas.js"></script>

