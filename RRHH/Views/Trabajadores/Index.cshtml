<div class="dataTables_wrapper no-footer">
    <div class="card datatable-scroll-wrap">

        <div class="card-header pb-0 d-flex justify-content-between">
            <h2>Trabajadores</h2>
            <button type="button" class="btn btn-primary bg-indigo-800 rounded-round btn-sm m-2" data-bs-toggle="modal" data-bs-target="#modal_Trabajadores" onclick="abrirModal()"><i class="ph-plus me-2"></i> Nuevo trabajador</button>
        </div>

        <div class="card-body">
            <div class="row">
