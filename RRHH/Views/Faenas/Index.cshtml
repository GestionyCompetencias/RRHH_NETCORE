@****@

<div id="modal_Faenas" class="modal fade" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header bg-dark pb-0">
                <h2><label id="txt_Cabecera" class="text-light">Faenas</label></h2><label id="txt_id" class="cls_t text-indigo"></label>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">

                <div class="row">
                    <div class="form-group form-group-float col-md-8">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Descripción</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_descripcion" class="form-control cls_t Obl_t" name="Descripcion" placeholder="Descripcion*" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-dots-nine"></i>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="form-group form-group-float col-md-4">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Fecha inicio</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="date" id="txt_fecini" class="form-control cls_t Obl_t" placeholder="Fecha inicio*" name="Fecha inicio" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-calendar"></i>
                            </div>
                        </div>
                    </div>
                        <div class="form-group form-group-float col-md-4">
                            <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Fecha termino*</label>
                            <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="date" id="txt_fecter" class="form-control cls_t Obl_t" placeholder="Fecha termino" name="Fecha termino" required>
                                <div class="form-control-feedback-icon">
                                    <i class="ph-calendar"></i>
                                </div>
                            </div>
                        </div>


                    <div class="form-group form-group-float col-md-4">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Contrato</label>
                        <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_contrato" class="form-control" placeholder="Contrato" name="Contrato" required>
                            <div class="form-control-feedback-icon">
                                <i class="ph-baby"></i>
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="row">
                        <div class="form-group form-group-float col-md-12">
                            <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Dirección</label>
                            <div class="form-control-feedback form-control-feedback-start mb-3">
                            <input type="text" id="txt_direccion" class="form-control cls_t Obl_t" name="Dirección" placeholder="Dirección*" required>
                                <div class="form-control-feedback-icon">
                                    <i class="ph-house-line"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                <div class="row">
                    <div class="form-group form-group-float col-md-4">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">País</label>
                        <select id="cbo_pais" onchange="mostrarRegionesFae()" name="Pais" class="form-control m-0 p-0 cls_t Obl_t"></select>
                    </div>
                    <div class="form-group form-group-float col-md-4">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Región</label>
                        <select id="cbo_region" onchange="mostrarComunasFae()" name="Region" class="form-control m-0 p-0 cls_t"></select>
                    </div>
                    <div class="form-group form-group-float col-md-4">
                        <label class="form-group-float-label animate is-visible m-0 p-0 font-weight-semibold">Comuna</label>
                        <select id="cbo_comuna" class="form-control m-0 p-0 cls_t" name="Comuna"></select>
                    </div>
                </div>


                <div class="row">
                    <div id="divErrores" style="font-weight:bold;color:red" class="form-control m-0 p-0 cls_t"></div>
                </div>

            </div>

            <div class="modal-footer" style="text-align:right">
                <button type="button" id="btnCerrar" class="btn btn-light legitRipple float-end" data-bs-dismiss="modal">Cerrar</button>
                <input type="button" value="Guardar" class="btn btn-primary float-end" onclick="Guarda()" />
            </div>

        </div>
    </div>
</div>




@section Scripts{
    <script src="~/scripts/formatorut.js"></script>
    <script src="~/scripts/Faenas.js"></script>
}